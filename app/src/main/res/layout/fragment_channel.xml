<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pageBackground">
    <RelativeLayout
        android:id="@+id/channel_view_loading_state"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/channel_view_loading_container"
            android:visibility="gone"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">
            <ProgressBar
                android:layout_width="@dimen/normal_01"
                android:layout_height="@dimen/normal_01"
                android:layout_marginEnd="@dimen/small_08"
                android:layout_gravity="center_vertical" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/inter"
                android:text="@string/loading_decentralized_data"
                android:textSize="@dimen/text_size_06"
                android:textFontWeight="300" />
        </LinearLayout>

        <include layout="@layout/container_nothing_at_location" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/channel_view_claim_display_area"
        android:orientation="vertical"
        android:layout_weight="10"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/large_26">
            <ImageView
                android:id="@+id/channel_view_cover_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@id/channel_view_tabs"
                android:src="@drawable/default_channel_cover"
                android:scaleType="centerCrop" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/small_12"
                android:layout_marginEnd="@dimen/small_12"
                android:layout_above="@+id/channel_view_tabs"
                android:layout_toEndOf="@id/channel_view_icon_container"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/channel_view_title"
                    android:background="@color/channelCoverBackground"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/small_04"
                    android:paddingEnd="@dimen/small_04"
                    android:paddingTop="@dimen/small_02"
                    android:paddingBottom="@dimen/small_02"
                    android:ellipsize="end"
                    android:fontFamily="@font/inter"
                    android:maxLines="2"
                    android:textSize="@dimen/text_size_10"
                    android:textColor="@color/white" />
                <TextView
                    android:id="@+id/channel_view_follower_count"
                    android:background="@color/channelCoverBackground"
                    android:visibility="invisible"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/small_02"
                    android:layout_marginBottom="@dimen/small_02"
                    android:paddingStart="@dimen/small_04"
                    android:paddingEnd="@dimen/small_04"
                    android:paddingTop="@dimen/small_02"
                    android:paddingBottom="@dimen/small_02"
                    android:fontFamily="@font/inter"
                    android:textSize="@dimen/text_size_04"
                    android:textColor="@color/white"
                    android:textFontWeight="300"/>
            </LinearLayout>

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/channel_view_tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:paddingStart="@dimen/normal_24_02"
                app:tabGravity="fill"
                app:tabMode="scrollable"/>
            <RelativeLayout
                android:id="@+id/channel_view_icon_container"
                android:layout_width="@dimen/normal_17"
                android:layout_height="@dimen/normal_17"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="@dimen/small_12"
                android:layout_marginBottom="@dimen/small_12">
                <RelativeLayout
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/bg_channel_icon"
                    android:id="@+id/channel_view_no_thumbnail"
                    android:layout_width="@dimen/normal_19_02"
                    android:layout_height="@dimen/normal_19_02">
                    <TextView
                        android:id="@+id/channel_view_icon_alpha"
                        android:layout_centerInParent="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter"
                        android:textAllCaps="true"
                        android:textSize="@dimen/text_size_15"
                        android:textColor="@color/white"
                        android:textFontWeight="300" />
                </RelativeLayout>
                <ImageView
                    android:id="@+id/channel_view_thumbnail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/channel_view_pager"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <LinearLayout
                android:elevation="@dimen/small_04"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:padding="@dimen/small_08">
                <RelativeLayout
                    android:id="@+id/channel_view_edit"
                    android:clickable="true"
                    android:background="?attr/selectableItemBackground"
                    android:layout_width="@dimen/normal_06"
                    android:layout_height="@dimen/normal_06"
                    android:layout_marginEnd="@dimen/small_08"
                    android:visibility="gone">
                    <ImageView
                        android:layout_centerInParent="true"
                        android:layout_width="@dimen/normal_03"
                        android:layout_height="@dimen/normal_03"
                        android:src="@drawable/ic_edit"
                        app:tint="@color/foreground" />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/channel_view_delete"
                    android:clickable="true"
                    android:background="?attr/selectableItemBackground"
                    android:layout_width="@dimen/normal_06"
                    android:layout_height="@dimen/normal_06"
                    android:layout_marginEnd="@dimen/small_08"
                    android:visibility="gone">
                    <ImageView
                        android:layout_centerInParent="true"
                        android:layout_width="@dimen/normal_03"
                        android:layout_height="@dimen/normal_03"
                        android:src="@drawable/ic_delete"
                        app:tint="@color/foreground" />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/channel_view_share"
                    android:clickable="true"
                    android:background="?attr/selectableItemBackground"
                    android:layout_width="@dimen/normal_06"
                    android:layout_height="@dimen/normal_06"
                    android:layout_marginEnd="@dimen/small_08">
                    <ImageView
                        android:layout_centerInParent="true"
                        android:layout_width="@dimen/normal_02_02"
                        android:layout_height="@dimen/normal_02_02"
                        android:src="@drawable/ic_share"
                        app:tint="@color/foreground" />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/channel_view_tip"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:layout_width="@dimen/normal_06"
                    android:layout_height="@dimen/normal_06"
                    android:layout_marginEnd="@dimen/small_08">
                    <io.lbry.browser.ui.controls.SolidIconView
                        android:layout_centerInParent="true"
                        android:layout_width="@dimen/normal_03"
                        android:layout_height="@dimen/normal_03"
                        android:text="@string/fa_gift"
                        android:textColor="@color/foreground"
                        android:textSize="@dimen/normal_02" />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/channel_view_follow_unfollow"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/normal_06">
                    <TextView
                        android:id="@+id/channel_view_text_follow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/small_06"
                        android:layout_marginEnd="@dimen/small_06"
                        android:fontFamily="@font/inter"
                        android:text="@string/follow"
                        android:textSize="@dimen/text_size_02"
                        android:textStyle="bold"
                        android:textAllCaps="true" />
                    <io.lbry.browser.ui.controls.OutlineIconView
                        android:id="@+id/channel_view_icon_follow"
                        android:layout_toRightOf="@id/channel_view_text_follow"
                        android:layout_centerVertical="true"
                        android:layout_width="@dimen/normal_03"
                        android:layout_height="@dimen/normal_03"
                        android:layout_marginEnd="@dimen/small_06"
                        android:text="@string/fa_heart"
                        android:textColor="@color/red"
                        android:textSize="@dimen/normal_02" />
                    <io.lbry.browser.ui.controls.SolidIconView
                        android:id="@+id/channel_view_icon_unfollow"
                        android:layout_centerInParent="true"
                        android:layout_width="@dimen/normal_03"
                        android:layout_height="@dimen/normal_03"
                        android:text="@string/fa_heart_broken"
                        android:textColor="@color/foreground"
                        android:textSize="@dimen/normal_02"
                        android:visibility="invisible"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/channel_view_subscribe_notify"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:layout_width="@dimen/normal_06"
                    android:layout_height="@dimen/normal_06"
                    android:layout_marginStart="@dimen/small_08"
                    android:visibility="gone">
                    <io.lbry.browser.ui.controls.SolidIconView
                        android:id="@+id/channel_view_icon_bell"
                        android:layout_centerInParent="true"
                        android:layout_width="@dimen/normal_03"
                        android:layout_height="@dimen/normal_03"
                        android:text="@string/fa_bell_slash"
                        android:textColor="@color/foreground"
                        android:textSize="@dimen/normal_02"/>
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>