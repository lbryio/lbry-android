<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:layout_marginStart="@dimen/small_10"
        android:layout_marginEnd="@dimen/small_10"
        android:layout_marginTop="@dimen/small_08"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter"
        android:text="@string/content_from"
        android:textSize="@dimen/text_size_02"
        android:textAllCaps="true"
        android:textStyle="bold" />
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/small_00.5"
        android:background="@color/divider"
        android:layout_marginTop="@dimen/small_08"
        android:layout_marginStart="@dimen/small_08"
        android:layout_marginEnd="@dimen/small_08" />

    <RelativeLayout
        android:id="@+id/content_from_past_24_hours_item"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/small_12">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:fontFamily="@font/inter"
            android:text="@string/past_24_hours"
            android:textSize="@dimen/text_size_04"
            android:textFontWeight="300" />
        <ImageView
            android:id="@+id/content_from_past_24_hours_item_selected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_check"
            android:visibility="gone"
            app:tint="@color/lbryGreen" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/content_from_past_week_item"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/small_12">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:fontFamily="@font/inter"
            android:text="@string/past_week"
            android:textSize="@dimen/text_size_04"
            android:textFontWeight="300" />
        <ImageView
            android:id="@+id/content_from_past_week_item_selected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_check"
            android:visibility="gone"
            app:tint="@color/lbryGreen" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/content_from_past_month_item"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/small_12">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:fontFamily="@font/inter"
            android:text="@string/past_month"
            android:textSize="@dimen/text_size_04"
            android:textFontWeight="300" />
        <ImageView
            android:id="@+id/content_from_past_month_item_selected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_check"
            android:visibility="gone"
            app:tint="@color/lbryGreen" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/content_from_past_year_item"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/small_12">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:fontFamily="@font/inter"
            android:text="@string/past_year"
            android:textSize="@dimen/text_size_04"
            android:textFontWeight="300" />
        <ImageView
            android:id="@+id/content_from_past_year_item_selected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_check"
            android:visibility="gone"
            app:tint="@color/lbryGreen" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/content_from_all_time_item"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/small_12">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:fontFamily="@font/inter"
            android:text="@string/all_time"
            android:textSize="@dimen/text_size_04"
            android:textFontWeight="300" />
        <ImageView
            android:id="@+id/content_from_all_time_item_selected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_check"
            android:visibility="gone"
            app:tint="@color/lbryGreen" />
    </RelativeLayout>
</LinearLayout>